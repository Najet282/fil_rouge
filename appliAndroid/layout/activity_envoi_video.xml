<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".controller.EnvoiVideo">

    <EditText
        android:id="@+id/etUrlVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="URL de votre vidÃ©o"
        android:inputType="textPersonName"
        android:text="nicki-minaj-bang-bang_128488.mp4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AB8D3F"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btEnvoyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtValider"
            android:backgroundTint="#AB8D3F"
            android:text="ENVOYER"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>